<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/header.css" type="text/css">
    <link rel="stylesheet" href="/public/css/main.css" type="text/css">
    <link rel="stylesheet" href="/public/css/moje-objave.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Document</title>
</head>
<body>
        
    <%- include('partials/header.ejs') %>

    <div class="title">
        <div class="title-inside">MOJE OBJAVE</div>
    </div>
<div class="main-wrap">
    <% userData.forEach((item) => { %>
      
            <div class="artikl-div">
            <div class="artikl-div-top">
            <img src="../public/assets/images/<%= item.artikl_image %>" class="image">
        
            
            
        

            
            </div>

            <div class="artikl-div-bottom">
                <div class="left">
                    <ul class="artikl-ul">
                            <li class="artikl-li"><%= item.naslov %></li>
                            <li class="artikl-li"><%= item.smjer %></li>
                            <li class="artikl-li"><%= item.razred + ' razred' %></li>
                    </ul>
                </div>
                <div class="right">
                    <form action="" method="POST" class="left-btn">
                        <button type="submit" name="artikl_id" value="<%= item.artikl_id %>" class="uredi-btn m-btn">UREDI</button>
                    </form>
                    <form action="/moje-otvori" method="POST" class="right-btn">
                        <button type="submit" name="artikl_id" value="<%= item.artikl_id %>" class="otvori m-btn">OTVORI</button>
                    </form>
                    <form action="/obrisi" method="POST" class="right-btn">
                        <button type="submit" name="artikl_id" value="<%= item.artikl_id %>" class="obrisi-btn m-btn">OBRIÅ I</button>
                    </form>
                </div>
            </div>

        </div>
    
      <% }) %>
</div>

<%- include('partials/succes.ejs') %>

<script src="/public/js/header.js"></script>
</body>
</html>